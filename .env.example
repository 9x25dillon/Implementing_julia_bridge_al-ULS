# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Service Endpoints
JULIA_BRIDGE_HOST=localhost
JULIA_BRIDGE_PORT=8001
AL_ULS_HOST=localhost
AL_ULS_PORT=8000

# WaveCaster Configuration
WAVECASTER_SAMPLE_RATE=44100
WAVECASTER_CARRIER_FREQ=1000
WAVECASTER_BIT_RATE=100
WAVECASTER_DEFAULT_SCHEME=QPSK

# LLM Configuration
LOCAL_LLM_MODEL=llama2
LOCAL_LLM_HOST=http://localhost:11434
REMOTE_LLM_PROVIDER=openai
REMOTE_LLM_MODEL=gpt-3.5-turbo

# Security
ENABLE_ENCRYPTION=true
ENABLE_WATERMARK=true
ENCRYPTION_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=wavecaster.log

# Performance
ENABLE_METRICS=true
ENABLE_HISTORY=true
HISTORY_FILE=modulation_history.json

# CCL Configuration
CCL_GHOST_THRESHOLD=0.5
CCL_ENTROPY_WEIGHT=0.3
CCL_COHERENCE_WEIGHT=0.7

# Julia Configuration
JULIA_THREADS=auto
JULIA_OPTIMIZATION_METHOD=gradient_descent
JULIA_MAX_ITERATIONS=100

# Docker Configuration
COMPOSE_PROJECT_NAME=ccl-wavecaster
DOCKER_BUILDKIT=1

# Development
DEBUG=false
TESTING=false
